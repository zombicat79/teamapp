<body>
  <img id="title" src="/images/arcadefont.png">
  <form action='/auth/login' method='POST'>

    <label for=''>Username</label>
    <input type='text' name='username'>

    <label for=''>Password</label>
    <input type='text' name='password'>

    <button type='submit'>Log in</button>
  </form>

  <div id="ch">
    <img src="/images/gamer_icon.png">
    <a href="/auth/signup">Don't have an account yet? Create one here!</a>
  </div>
  {{#if errorMessage}}
    <div>
      {{errorMessage}}
    </div>
  {{/if}}
</body>
