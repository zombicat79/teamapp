
<form action='/project/main/:search' method='GET'>
<div class="search-bar-box">
  <input type='text' name='search' placeholder="Search for a project" class="search-bar">
  <button type='submit' class="search-bar-btn">Search</button>
</div>
</form>
<div class="project-card-box">
    {{#each project}}
        <div class="creator-card">
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <button class="see-more-btn"><a href="/project/details/{{this.id}}">See More</a></button>
        </div>
    {{/each}}
</div>

<div class="remove-filters-div"><button class="remove-filters"><a href="/project/main">Remove filters</a></button></div>
<div class="project-card-box">
    {{#each matchingProjects}}
        <div class="creator-card">
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <button class="see-more-btn"><a href="/project/details/{{this.id}}">See More</a></button>
        </div>
    {{/each}}
</div>
<p>{{errorMessage}}</p>
