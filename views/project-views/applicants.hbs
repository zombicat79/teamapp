<h1>You have {{this.projects.applicants.length}} new application(s)</h1>
<div class="display-flex">
    {{#each project.applicants}}
            <div class="creator-card">
                <h3>{{this.username}} wants to work with you!!</h3>
                <img src="{{this.profileImage}}" width="200" height="200">
                <p>Based in {{this.location}}</p>

                <p>Skills:</p>
                
                {{#each this.skills}}
                <li class="list-skills-applicants">{{this}}</li>
                {{/each}}

                <div class="btn-applicants-view-div">
                    <button class="btn-applicants-view"><a  href="/users/projects/{{this._id}}">See current projects</a></button>
                    <button class="btn-applicants-view"><a  href="/users/detail/{{this._id}}">See full profile</a></button>
                    <button class="btn-applicants-view"><a  href="/project/{{../projectId}}/accept/{{this._id}}"/>Accept in the Team</a></button>
                    <button class="btn-applicants-view"><a  href="/project/{{../projectId}}/decline/{{this._id}}">Decline application</a></button>
                </div>
            </div>
    {{/each}}
</div>
<h2>{{errorMessage}}</h2>
<div class="search-bar-box"><button class="btn-applicants-view"><a href="/project/users/details">Go back to your projects</a></button></div>
