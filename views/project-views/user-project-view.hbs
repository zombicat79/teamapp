
<div class="project-users-main">


    <p>{{errorMessage}}</p>

    <h3 class="new-project-btn"><a href="/project/create">Create New Project</a></h3>

    <div class="creator-box">
        {{#if projectsAsCreator}}
            <h2 class="main-titles-projects-view">Your Projects</h2>
        {{/if}}
        {{#each projectsAsCreator}}
            <div class="creator-card">
                <img class="img-project-view" src="{{this.screenshots}}">
                <h2 class="title-project-view">{{this.title}}</h2>
                <p>{{this.description}}</p>
                <div class="project-view-btns">
                    <button class="edit-delete-btn"><a href="/project/edit/{{this.id}}">Edit</a></button>
                    <button class="edit-delete-btn"><a href="/project/delete/{{this.id}}">Delete</a></button>
                </div>
                <button class="project-full-btn"><a href="/project/details/{{this.id}}">view project</a></button>
                
            </div>
        {{/each}}
    </div>


    <div class="creator-box">
    {{#if projectsAsMember}}
        <h2 class="main-titles-projects-view">Projects you are a part of</h2>
    {{/if}}
        {{#each projectsAsMember}}
            <div class="creator-card">
                <img class="img-project-view" src="{{this.screenshots}}">
                <h2 class="title-project-view">{{this.title}}</h2>
                <p>{{this.description}}</p>
                <button class="project-full-btn"><a href="/project/details/{{this.id}}">See full project</a></button>
                
            </div>
        {{/each}}
    </div>




    <div class="creator-box">
    {{#if projectsHaveApplicants}}
        <h2 class="main-titles-projects-view">Some of your projects have new applicants</h2>
    {{/if}}
        {{#each projectsHaveApplicants}}
            <div class="creator-card">
                <img class="img-project-view" src="{{this.screenshots}}">
                <h2 class="title-project-view">{{this.title}}</h2>
                <p>{{this.description}}</p>
                <div class="project-view-btns-second">
                    <button class="edit-delete-btn"><a href="/project/details/{{this.id}}">See full project</a></button>
                    <button class="edit-delete-btn"><a href="/project/applicants/{{this.id}}">See applications</a></button>
                    <button class="project-full-btn"><a href="/project/details/{{this.id}}">view project</a></button>
                </div>
                
            </div>
        {{/each}}
    </div>

    <div class="creator-box">
    {{#if projectsApplied}}
        <h2 class="main-titles-projects-view">Projects to which you applied</h2>
    {{/if}}
        {{#each projectsApplied}}
            <div class="creator-card">
                <img class="img-project-view" src="{{this.screenshots}}">
                <h2 class="title-project-view">{{this.title}}</h2>
                <p>{{this.description}}</p>
                <button class="project-full-btn"><a href="/project/details/{{this.id}}">See full project</a></button>
                
            </div>
        {{/each}}
    </div>
</div>



